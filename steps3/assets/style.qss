QMainWindow {
    background: qlineargradient(
        x1: 0, y1: 0,    /* début du gradient (coin haut-gauche) */
        x2: 1, y2: 1,    /* fin du gradient (coin bas-droit) */
        stop: 0 #141e30, /* couleur de départ */
        stop: 1 #243b55  /* couleur de fin */
    );
}

/* Bouton avec ObjectName */
QPushButton#buttonPrimary {
    background-color: black;
    color: white;
    padding: 10px;
    border-radius: 5px;
}

/* Bouton Avec classe */
QPushButton[class="button"] {
    background-color: #e74c3c;
    color: white;
    padding: 10px;
    border-radius: 5px;
}